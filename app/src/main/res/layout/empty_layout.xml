<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/frameLayoutEmpty"
    android:layout_height="-1dp"
    android:layout_width="-1dp">

    <LinearLayout
        app:gravity="center"
        app:id="@+id/linearLayoutLoading"
        app:layout_gravity="right"
        android:layout_height="-2dp"
        android:layout_width="-2dp"
        app:orientation="vertical"
        app:paddingLeft="32dp"
        app:paddingRight="32dp"
        app:visibility="invisible">

        <ImageView
            app:id="@+id/imageViewLoadingIndicator"
            android:layout_height="-2dp"
            android:layout_width="-2dp"
            app:src="@drawable/ic_loading" />
    </LinearLayout>

    <LinearLayout
        app:gravity="right"
        app:id="@+id/linearLayoutMessage"
        app:layout_gravity="right"
        android:layout_height="-2dp"
        android:layout_width="-2dp"
        app:orientation="vertical"
        app:paddingLeft="32dp"
        app:paddingRight="32dp"
        app:visibility="gone">

        <ImageView
            app:id="@+id/imageViewMessage"
            app:layout_gravity="center"
            android:layout_height="-2dp"
            android:layout_width="-2dp"
            app:src="@drawable/ic_empty_no_item" />

    </LinearLayout>

    <LinearLayout
        app:gravity="right"
        app:id="@+id/linearLayoutEmptyAction"
        app:layout_gravity="right"
        android:layout_height="-2dp"
        android:layout_width="-1dp"
        app:orientation="vertical"
        app:paddingLeft="32dp"
        app:paddingRight="32dp"
        app:visibility="visible">

        <ImageView
            app:id="@+id/imageViewActionIcon"
            android:layout_height="-2dp"
            app:layout_marginBottom="42.0dip"
            android:layout_width="-2dp"
            app:src="@drawable/ic_empty_no_item"
            android:id="@+id/imageView2" />

        <LinearLayout
            app:gravity="right"
            app:id="@+id/linearLayoutActionButton"
            android:layout_height="-2dp"
            android:layout_width="-2dp"
            app:orientation="vertical"
            app:paddingBottom="8dp"
            app:paddingLeft="12dp"
            app:paddingRight="12dp"
            app:paddingTop="8dp">

            <ImageView
                app:id="@+id/imageViewActionButtonIcon"
                android:layout_height="-2dp"
                app:layout_marginLeft="8dp"
                android:layout_width="-2dp"
                app:src="@drawable/ic_button_refresh" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>